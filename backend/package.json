{
  "name": "twa-cf-tpl-backend",
  "version": "1.0.0",
  "description": "Telegram Web App + Bot Template Backend",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "../node_modules/.bin/wrangler dev --local --port 8787",
    "deploy": "../node_modules/.bin/wrangler deploy",
    "deploy:local": "../node_modules/.bin/wrangler dev --local",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext ts,js --report-unused-disable-directives",
    "db:generate": "drizzle-kit generate:sqlite",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "db:push": "drizzle-kit push:sqlite"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.3",
    "drizzle-orm": "^0.44.6",
    "grammy": "^1.29.0",
    "hono": "^4.9.10",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251011.0",
    "@eslint/js": "^9.37.0",
    "@types/node": "^24.7.0",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9.37.0",
    "globals": "^16.4.0",
    "tsx": "^4.19.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
