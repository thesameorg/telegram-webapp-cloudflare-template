{
  "name": "twa-cf-tpl-backend",
  "version": "1.0.0",
  "description": "Telegram Web App + Bot Template Backend",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "../node_modules/.bin/wrangler dev --local --port 8787",
    "deploy": "../node_modules/.bin/wrangler deploy",
    "deploy:local": "../node_modules/.bin/wrangler dev --local",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext ts,js --report-unused-disable-directives",
    "db:generate": "drizzle-kit generate:sqlite",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "db:push": "drizzle-kit push:sqlite"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.2.2",
    "drizzle-orm": "^0.33.0",
    "grammy": "^1.29.0",
    "hono": "^4.5.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240909.0",
    "@eslint/js": "^9.36.0",
    "@types/node": "^20.16.0",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9.36.0",
    "globals": "^16.4.0",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4",
    "vitest": "^3.2.4"
  }
}
